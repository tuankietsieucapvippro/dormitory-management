@model IEnumerable<QLKTX.Models.LoaiPhong>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Danh sách loại phòng</h2>

<p>
    @Html.ActionLink("Thêm loại phòng", "Create")
</p>
<table class="table">
    <thead class="table-active">
        <tr>
            <th>
                Tên loại phòng<span style="float:right;font-weight:normal">|</span>
            </th>
            <th>
                Đơn giá<span style="float:right;font-weight:normal">|</span>
            </th>
            <th>
                Mô tả<span style="float:right;font-weight:normal">|</span>
            </th>
            <th>
                Giới tính<span style="float:right;font-weight:normal">|</span>
            </th>
            <th></th>
        </tr>
    </thead>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TenLoaiPhong)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DonGia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MoTa)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GioiTinh)
        </td>
        <td>
            <a class="btn btn-primary" href="@Url.Action("Edit","LoaiPhongs", new { id = item.LoaiPhongID })"><i class='bx bxs-pencil'></i></a>
            <a class="btn btn-danger" href="@Url.Action("Delete","LoaiPhongs", new { id = item.LoaiPhongID })"><i class='bx bxs-trash'></i></a>
        </td>
    </tr>
}

</table>
