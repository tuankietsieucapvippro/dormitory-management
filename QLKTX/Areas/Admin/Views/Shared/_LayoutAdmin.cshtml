
@RenderSection("Scripts", required: false)
<!doctype html>
<html lang="en">

<head>
    <title>Quản lý ký túc xá</title>
    <link rel="icon" type="image/x-icon" href="~/Images/logo-dai-hoc-nha-trang-inkythuatso.png">
    @RenderSection("head", required: false)
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="~/Content/style.css">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
          integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>

<body>
    <div class="content">
        <div class="my-nav col-md-3">
            <div class="logo">
                <img src="~/Images/logo-dai-hoc-nha-trang-inkythuatso.png" alt="">
                <span>NTU</span>
            </div>
            <ul class="list-menu">
                <li class="list-menu-item">
                    <a class="@(ViewContext.RouteData.Values["controller"].ToString() == "ToaNhas" ? "active" : "")"
                       href="@Url.Action("Index","ToaNhas")">
                        <i class='bx bxs-business'></i>Quản lý
                        tòa nhà
                    </a>
                </li>
                <li class="list-menu-item">
                    <a class="@(ViewContext.RouteData.Values["controller"].ToString() == "Phongs" ? "active" : "")"
                       href="@Url.Action("Index","Phongs")">
                        <i class='bx bx-door-open'></i>Quản lý
                        phòng
                    </a>
                </li>
                <li class="list-menu-item">
                    <a class="@(ViewContext.RouteData.Values["controller"].ToString() == "LoaiPhongs" ? "active" : "")"
                       href="@Url.Action("Index","LoaiPhongs","Admin")">
                        <i class='bx bx-door-open'></i>Quản lý loại
                        phòng
                    </a>
                </li>
                <li class="list-menu-item">
                    <a class="@(ViewContext.RouteData.Values["controller"].ToString() == "SinhViens" ? "active" : "")"
                       href="@Url.Action("Index","SinhViens","Admin")">
                        <i class='bx bx-user'></i>Quản lý sinh viên
                    </a>
                </li>
                <li class="list-menu-item">
                    <a class="@(ViewContext.RouteData.Values["controller"].ToString() == "DienNuocs" ? "active" : "")"
                       href="@Url.Action("Index","DienNuocs","Admin")">
                        <i class='bx bxs-bolt'></i>Quản lý điện nước
                    </a>
                </li>
                <li class="list-menu-item">
                    <a class="@(ViewContext.RouteData.Values["controller"].ToString() == "TaiKhoans" ? "active" : "")"
                       href="@Url.Action("Index","TaiKhoans","Admin")">
                        <i class='bx bxs-user-account'></i>Quản lý tài khoản
                    </a>
                </li>
                <li class="list-menu-item"><a href="#"><i class='bx bxl-chrome'></i>Quản lý Web</a></li>
                <li class="list-menu-item"><a href="@Url.Action("SignOut","Login","Admin")"><i class='bx bx-log-out'></i>Đăng xuất</a></li>
            </ul>
        </div>
        <div class="row" style="margin-left: 0px; background-color:#F3F4FB">
            <div class="col-md-3" style="padding: 0px;">

            </div>
            <div class="col-md-9" style="float: right; padding: 0px; height: 2000px;">
                @RenderBody()
            </div>
        </div>
    </div>
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
            integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
            crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
            integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
            crossorigin="anonymous"></script>
    @RenderSection("tail", required: false)
</body>

</html>